{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "ShakeLabTaxonomyTree (schema_version 1.0.0)",
  "type": "object",
  "required": ["type", "schema_version", "metadata", "mappings"],
  "additionalProperties": false,
  "properties": {
    "type": { "const": "ShakeLabTaxonomyTree" },
    "schema_version": { "const": "1.0.0" },
    "metadata": { "$ref": "#/definitions/metadata" },
    "mappings": { "$ref": "#/definitions/mappings" }
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "required": ["name", "date"],
      "additionalProperties": true,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "version": { "type": "string" },
        "source": { "type": "string" },
        "license": { "type": "string" }
      }
    },
    "mappings": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^.+$": { "$ref": "#/definitions/mapping_entry" }
      }
    },
    "mapping_entry": {
      "type": "object",
      "required": ["fragility_models"],
      "additionalProperties": false,
      "properties": {
        "fragility_models": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/fragility_ref" }
        },
        "notes": { "type": "string" }
      }
    },
    "fragility_ref": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "weight": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      }
    }
  }
}
